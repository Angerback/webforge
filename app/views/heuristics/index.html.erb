		<% (0..@heuristics.length-1).each do |i| %>
			
			<li><%= link_to "H"+(i+1).to_s+": " + @heuristics[i].name , {:action => "show", :controller => "heuristics", :heuristic_id => (i+1) } %></li>
		<% end %>
