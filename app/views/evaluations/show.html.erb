<% provide(:title, "Resultados de la Evaluación " + @last_test.evaluation_id.to_s) %>
<div class="container">
	<div>
		<ol class="breadcrumb ms">
		  	<li><%= link_to "Inicio", root_path %></li>
		  	<li><%= link_to "Evaluaciones", evaluations_path %></li>
		  	<li class="active"> Resultados de la Evaluación <%= @last_test.evaluation_id %></li>
		</ol>
	</div>
	
	<div class="progress">
		<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width:100%">
	    100%
		</div>
	</div>

	<div class="row">
		<div class="col-xs-10">
			<h1 class="question-instructions">Resultados</h1>	
		</div>
		<div class="col-xs-2">
			<%= link_to(evaluations_path) do %>
				<span class="glyphicon glyphicon-remove btn-exit" aria-hidden="true"></span>
			<% end %>
		</div>
	</div>

	
	<div class="row">
		<div class="col-xs-4">
			<div class="panel panel-default">
				<div class="panel-body row">
					<div class="col-xs-12 img-container">
						<div>
							<%= image_tag "evaluations/results/correct.png", alt: "Correct answers" %>
						</div>
						<div class="results-titles">
							Respuestas correctas <span class="results-numbers"><%= @correct_answers.length %>/<%= @answers.length %></span>	
						</div>
					</div>
					<!--
					<div class="col-xs-6 img-container">
						<div>
							<%= image_tag "evaluations/results/wrong.png", alt: "Wrong answers" %>
						</div>
						<div class="results-titles">
							Respuestas erroneas <span class="results-numbers"><%= @answers.length - @correct_answers.length%>/<%= @answers.length %></span>
						</div>	
					</div>
					-->	
				</div>			
			</div>				
		</div>		

		<div class="col-xs-3">
			<div class="panel panel-default">
				<div class="panel-body img-container">
					<div>
						<%= image_tag "evaluations/results/grade.png", alt: "grade" %>
					</div>
					<div class="results-titles">
						Calificación <span class="results-grade"><%= number_with_precision(@last_test.grade, :precision => 1 )%></span>
					</div>
				</div>
			</div>	
		</div>

		
		<div class="col-xs-5">
			<div class="panel panel-default recomendations">
				<div class="panel-body row">
					<% if @topics.length > 0 %>
					<div class="col-xs-5">
						<div>
							<%= image_tag "evaluations/results/resources.png", alt: "grade" %>
						</div>
					</div>
					<div class="col-xs-7">
						<h2 class="ms-h2">Material a profundizar</h2>
						<% @topics.each do |topic| %>
							<% if topic %>
								<div>
									<%= link_to topic.name,
												topic.path %>
								</div>
							<% end %>
						<% end %>
					</div>
					<% else %>
						<div class="col-xs-5">
							<div>
								<%= image_tag "evaluations/results/success.png", alt: "success" %>
							</div>
						</div>
						<div class="col-xs-7">
							<h2 class="ms-h2">¡Felicidades!</h2>
							<p>¡Tu puntuación ha sido perfecta!</p>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	
	</div>	
</div>
