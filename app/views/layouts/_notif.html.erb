<%# Se crean dialogos de alerta para los mensajes Flash (mensaje pasado de una vista a otra) %>
<% unless flash.blank? %>
  <script>
    $(document).ready(function(){
      <%
      # Los codigos usados aca no son los mismos que en notify.js, por eso hay que hacer este mapeo:
      map = {
        'error' => 'error',
        'success' => 'success',
        'alert' => 'warn'
      }
      map.default = 'info'
      %>
      <% flash.each do |message_type, message| %>
          $( ".navbar-right"  ).notify("<%= message %>", "<%= map[message_type] %>");    
      <% end %>
    });
  </script>
<% end %>