<% provide(:title, @course.name) %>
<div class="container">
	<div>
		<ol class="breadcrumb ms">
		  	<li><%= link_to "Inicio", root_path %></li>
		  	<li><%= link_to "Cursos", courses_path %></li>
		  	<li class="active"><%= @course.name %></li>
		</ol>
	</div>
	<div>
		<h1 class="question-instructions"><%= @course.name %></h1>		

		<table class="table">
			<tr>
				<th>Alumno</th>
				<th>Rut</th>
				<th>Correo</th>
				<th colspan="3">Operaciones</th>
			</tr>
			<% @course.users.each do |user| %>
				<tr>
					<td><%= user.name %></td>
					<td><%= user.rut %></td>
					<td><%= user.email %></td>
					<td><%= link_to 'Ver', user %></td>
					<td><%= link_to 'Editar', edit_user_path(user) %></td>
					<%# Boton de eliminar comentado hasta realizar bien la eliminacion%>					
					<!--td><%= link_to 'Eliminar', 'javascript:;', :onclick => 'deleteUserCourseDialog.showDialog("'+user.name+'", '+String(user.id)+');' %></td!-->
				</tr>
			<% end %>
		</table>
		<div>
			<%= link_to 'Volver', courses_path, class: "btn btn-primary square" %>
		</div>
	</div>
</div>

