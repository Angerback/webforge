<% provide(:title, "Conversaciones") %>
<div class="container">
	<div>
		<ol class="breadcrumb ms">
		  	<li><%= link_to "Inicio", root_path %></li>
		  	<li class="active"> Prácticas </li>
		</ol>
	</div>
	<h1 class="question-instructions">Conversaciones</h1>
	<% @chats.each do |chat| %>
		<div class="panel panel-default">			
			<div class="panel-body">
				<h2 class="ms-h2">
    				<span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
    				<strong><%= chat.title %></strong> de <%= @owners[chat.id].name %>
    			</h2>			
				<p><%= @authors[chat.id] %> dice:</p>
				<div class="well"><%= @messages[chat.id].body.html_safe %></div>
				<%= link_to 'Ver conversación completa', {action: "show", id: chat.id}, class: "btn btn-primary square" %>
			</div>
		</div>		
	<% end %>
</div>