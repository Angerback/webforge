<div>
  <%= form_for(@user) do |f| %>
    <div>
      <% if @user.errors.any? %>
      <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
      </ul>
    <% end %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, class: "form-control ms-input" %>
    </div>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control ms-input" %>
    </div>
    <div class="field">
      <%= f.label :rut %><br>
      <%= f.text_field :rut, class: "form-control ms-input" %>
    </div>
    <div class="field">
      <%= f.label :password, "ContraseÃ±a" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control ms-input" %>
    </div>
    <div class="field" id="tipoUsuarioSelect">
      <%= label :user_type, "Tipo de Usuario" %>
      <%= f.select :user_type, options_for_select([["Alumno"], ["Ayudante"], ["Profesor"]]) %>
      </div>
      <%= f.submit 'Crear usuario', :class  => "btn btn-primary square" %>
    </div>
  <% end %>
</div>
