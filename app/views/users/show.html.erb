<% provide(:title, @user.name) %>
<div class="container">
	<ol class="breadcrumb ms">
        <li><%= link_to "Inicio", root_path %></li>
        <li><%= link_to "Usuarios", users_path %></li>
        <li class="active"> Cuenta de  <%= @user.name %></li>
    </ol>
	<h1 class="question-instructions"><%= @user.name %></h1>
	<% flash.each do |message_type, message| %>
  		<div class=""><%= message %></div>
	<% end %>
	<div class="row">
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-body">
					<h2 class="ms-h2">Información básica</h2>
					<p>
						<strong>Rut:</strong> <%= @user.rut %>
					</p>		
					<p>
						<strong>Correo:</strong> <%= @user.email %>
					</p>	
					<p>
						<strong>Rol:</strong> <%= @user.user_type %>
					</p>	
				</div>
			</div>	
		</div>
		<div class="col-xs-6">
			<% if @lastTest %>
				<div class="panel panel-default">
					<div class="panel-body">
						<h2 class="ms-h2">Últimas evaluaciones</h2>
						<p>
							<strong>Calificación en <%= @evaluation.name %>:</strong> 

							
								<!-- RECORRO CADA UNO DE LOS TEST HECHO POR EL USUARIO
								LOS TUVE QUE RELLENAR MANUALMENTE EN LA BASE DE DATOS -->
								<br>
								La ultima nota es 
								<%=number_with_precision(@lastTest.grade, :precision=>2) %><br>
								La mejor nota es
								<%=number_with_precision(@mejorNota, :precision=>2) %><br>
								La peor nota es
								<%=number_with_precision(@peorNota, :precision=>2) %><br>
								El promedio es
								<%=number_with_precision(@promedioNota, :precision=>2) %><br>


								<!-- AQUI ESTA LA "VENTANA EMERGENTE" PRIMERO EL BOTON 
								QUE LA HACE APARECER Y LUEGO EL CONTENIDO QUE TENDRA
								ABRE LA VIEW LLAMADA _grades QUE SE ENCUENTRA EN LA
								CARPETA views/users -->	
								<!-- Trigger the modal with a button -->
								<button type="button" class="btn btn-primary square square" data-toggle="modal" data-target="#allGrade">Ver mas</button>
								<!-- Modal -->
								<div id="allGrade" class="modal fade" role="dialog">
								  <div class="modal-dialog">

								    <!-- Modal content-->
								    <div class="modal-content">
								      <div class="modal-header">
								        <button type="button" class="close" data-dismiss="modal">&times;</button>
								        <h4 id="allGradeTag">Notas de <%=@user.name%></h4>
								      </div>
								      <div class="modal-body">
								        <%= render 'grades' %>
								      </div>
								    </div>

								  </div>
								</div>

						</p>	
					</div>
				</div>
			<% end %>			
		</div>
	</div>
	
	<div>
		<%= link_to 'Volver', users_path, class: "btn btn-primary square square" %>
		<%= link_to 'Editar', edit_user_path(@user), class: "btn btn-primary square square" %></td>
		<%= link_to 'Eliminar', @user, method: :delete, data: { confirm: 'Estás seguro que deseas eliminar a ' + @user.name + '?' }, class: "btn btn-primary square square" %>
	</div>
	<div>
		
	</div>
	<div>
		
	</div>
</div>



