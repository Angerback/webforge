<% provide(:title, "Usuarios") %>
<div class="container">
	<div>
		<ol class="breadcrumb ms">
		  	<li><%= link_to "Inicio", root_path %></li>
		  	<li class="active"> Usuarios</li>
		</ol>
	</div>
	<div>
		<h1 class="question-instructions">Usuarios de la aplicación</h1>
		<% flash.each do |message_type, message| %>
  			<div class=""><%= message %></div>
		<% end %>
		<table class="table">
			<tr>
				<th>Nombre</th>
				<th>Rut</th>
				<th>Correo</th>
				<th>Rol</th>
				<th colspan="3">Operaciones</th>
			</tr>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.name %></td>
					<td><%= user.rut %></td>
					<td><%= user.email %></td>
					<td><%= user.user_type %></td>
					<td><%= link_to 'Ver', user %></td>
					<td><%= link_to 'Editar', edit_user_path(user) %></td>
					<td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar a ' + user.name + '?' } %></td>
				</tr>
			<% end %>
		</table>
		<div>
			<%= link_to 'Nuevo', new_user_path, class: "btn btn-primary square" %>
		</div>
	</div>
</div>
